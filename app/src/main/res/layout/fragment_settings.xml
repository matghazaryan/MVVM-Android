<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="android.mvvm.mg.com.mvvm_android.fragments.settings.viewModel.SettingsViewModel" />

        <variable
            name="handler"
            type="android.mvvm.mg.com.mvvm_android.fragments.settings.ISettingsHandler" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        tools:context=".fragments.settings.view.SettingsFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/image_size_2"
                android:layout_height="@dimen/image_size_2"
                android:layout_marginTop="@dimen/activity_medium_margin"
                android:scaleType="centerCrop"
                app:setImageUrl="@{viewModel.imagePath}"
                tools:ignore="ContentDescription" />

        </LinearLayout>

    </ScrollView>

</layout>